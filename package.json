{
  "name": "torus-client",
  "version": "1.0.0",
  "description": "Torus REST and RPC client",
  "keywords": [
    "bitcoin",
    "bitcoind",
    "client",
    "request",
    "rest",
    "rpc",
    "torus",
    "torus-cli",
    "torusd",
    "nodejs"
  ],
  "homepage": "https://github.com/torus-economy/torus-client",
  "bugs": "https://github.com/torus-economy/torus-client/issues",
  "license": "MIT",
  "author": {
    "name": "Sven Skender",
    "email": "sskender@pm.me"
  },
  "main": "dist/src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/torus-economy/torus-client.git"
  },
  "scripts": {
    "lint": "eslint src",
    "transpile": "rm -rf dist/* && babel src --out-dir dist/src"
  },
  "dependencies": {
    "@uphold/request-logger": "^2.0.0",
    "debugnyan": "^1.0.0",
    "json-bigint": "^1.0.0",
    "lodash": "^4.0.0",
    "request": "^2.53.0",
    "semver": "^5.7.2",
    "standard-error": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/plugin-transform-async-to-generator": "^7.14.5",
    "@babel/polyfill": "7.0.0-beta.32",
    "@babel/preset-env": "^7.14.8",
    "@babel/register": "^7.14.5",
    "babel-eslint": "^8.2.6",
    "babel-plugin-istanbul": "^6.0.0",
    "eslint": "8.29.0",
    "eslint-config-uphold": "0.0.1",
    "mocha": "^9.2.2",
    "nock": "^9.1.0",
    "nyc": "^15.1.0",
    "pre-commit": "^1.1.2",
    "should": "^13.1.3"
  },
  "engines": {
    "node": ">=4"
  },
  "nyc": {
    "include": [
      "src/"
    ],
    "instrument": false,
    "report-dir": "./coverage",
    "sourceMap": false
  },
  "options": {
    "mocha": "--require @babel/register --require @babel/polyfill --timeout 20000 --recursive --require should"
  },
  "pre-commit": [
    "lint"
  ]
}
